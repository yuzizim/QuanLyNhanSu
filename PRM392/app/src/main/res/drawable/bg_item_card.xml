<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D6EAF8" /> <!-- màu khi nhấn -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- màu nền bình thường -->
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#DDDDDD" /> <!-- viền nhẹ -->
        </shape>
    </item>
</selector>
